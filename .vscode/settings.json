{
  "Lua.diagnostics.globals": ["vim", "use"],
  "[lua]": {
    "editor.defaultFormatter": "yinfei.luahelper"
    // "editor.defaultFormatter": "sumneko.lua"
    // "editor.defaultFormatter": "Koihik.vscode-lua-format"
  },
  "editor.formatOnSave": true,
  "Lua.format.defaultConfig": {
    "indent_style": "tab",
    "indent_size": "1",
    "quote_style": "double",
    "call_arg_parentheses": "keep",
    "continuation_indent_size": "1",
    "local_assign_continuation_align_to_first_expression": "false",
    "align_call_args": "false",
    "align_function_define_params": "false",
    "keep_one_space_between_table_and_bracket": "true",
    "align_table_field_to_first_field": "false",
    "keep_one_space_between_namedef_and_attribute": "true",
    // "max_continuous_line_distance": "1"
    "continuous_assign_statement_align_to_equal_sign": "true",
    "continuous_assign_table_field_align_to_equal_sign": "true",
    "label_no_indent": "true",
    "do_statement_no_indent": "true",
    "if_condition_no_continuation_indent": "true",
    "table_append_expression_no_space": "false",
    "if_condition_align_with_each_other": "true",
    "keep_line_after_if_statement": "minLine:1",
    "keep_line_after_do_statement": "minLine:1",
    "keep_line_after_while_statement": "minLine:1",
    "keep_line_after_repeat_statement": "minLine:1",
    "keep_line_after_for_statement": "minLine:1",
    "keep_line_after_local_or_assign_statement": "maxLine:1",
    "keep_line_after_function_define_statement": "minLine:1",
    "keep_line_after_expression_statement": "maxLine:1",
    "local_name_define_style": "snake_case",
    "function_param_name_style": "snake_case",
    "function_name_define_style": "snake_case",
    "local_function_name_define_style": "snake_case",
    "table_field_name_define_style": "snake_case",
    "global_variable_name_define_style": "snake_case|upper_snake_case",
    "module_name_define_style": "same('m')|same(filename, snake_case)",
    "require_module_name_style": "same(first_param, snake_case)",
    "class_name_define_style": "same(filename, snake_case)",
    "enable_check_codestyle": "true"
  },
  "Lua.format.enable": true,
  // "luahelper"
  // "luahelper.format.align_args": false,
  "luahelper.base.requirePathSeparator": ".",
  "luahelper.base.rootdir": "../",

  // "luahelper.Warn.CheckReferNoFile": true,
  "luahelper.format.column_limit": 180,
  "luahelper.format.indent_width": 1,
  "luahelper.format.use_tab": true,
  "luahelper.format.tab_width": 1,
  "luahelper.format.continuation_indent_width": 1,
  "luahelper.format.spaces_before_call": 1,
  "luahelper.format.keep_simple_control_block_one_line": false,
  "luahelper.format.chop_down_parameter": false,
  "luahelper.format.double_quote_to_single_quote": false,
  // "luahelper.format.line_separator": "input"
  "luahelper.format.single_quote_to_double_quote": true,
  "luahelper.format.spaces_around_equals_in_field": true,
  "luahelper.format.break_after_operator": false,

  // table
  "luahelper.format.chop_down_table": true,
  "luahelper.format.chop_down_kv_table": true,
  // "luahelper.format.column_table_limit": "column_limit",
  "luahelper.format.extra_sep_at_table_end": true,
  "luahelper.format.spaces_inside_table_braces": true,
  "luahelper.format.align_table_field": true,
  "luahelper.format.break_after_table_lb": true,
  "luahelper.format.break_before_table_rb": true,
  "luahelper.format.table_sep": ",",

  // fn
  "luahelper.format.keep_simple_function_one_line": false,
  "luahelper.format.align_args": true,
  "luahelper.format.break_after_functioncall_lp": true,
  "luahelper.format.break_before_functioncall_rp": true,
  "luahelper.format.spaces_inside_functioncall_parens": false,
  "luahelper.format.spaces_inside_functiondef_parens": false,
  "luahelper.format.align_parameter": true,
  "luahelper.format.break_after_functiondef_lp": false,
  "luahelper.format.break_before_functiondef_rp": false,
  "luahelper.format.line_breaks_after_function_body": 1
}
